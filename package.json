{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun src/seed/index.ts",
    "mcp": "bun src/mcp/server.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest tests/integration",
    "smoke": "bun tests/smoke/index.ts",
    "smoke:redis": "bun tests/smoke/index.ts --redis",
    "smoke:turso": "bun tests/smoke/index.ts --turso",
    "smoke:openai": "bun tests/smoke/index.ts --openai",
    "eval": "bun tests/eval/cli.ts",
    "eval:relevance": "bun tests/eval/cli.ts -c relevance",
    "eval:accuracy": "bun tests/eval/cli.ts -c accuracy",
    "eval:safety": "bun tests/eval/cli.ts -c safety",
    "eval:pii": "bun tests/eval/cli.ts -c pii",
    "eval:tone": "bun tests/eval/cli.ts -c tone",
    "eval:refusal": "bun tests/eval/cli.ts -c refusal"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/resources": "^2.5.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.45.1",
    "express": "^4.21.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.2",
    "nanoid": "^5.1.6",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "prom-client": "^15.1.3",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.1.10",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "bun-types": "^1.1.30",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.11.1",
    "jest": "^29.7.0",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.53.1"
  }
}
